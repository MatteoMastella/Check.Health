@{
    ViewData["Title"] = "Paciente";
}

<head>
    <style>
        body {
            font-family: Arial, Arial, Helvetica, sans-serif;
            background-color: white;
        }

        input {
            padding: 15px;
            border: none;
            border-radius: 15px;
            outline: none;
            font-size: 15px;
        }

        .principal {
            background-color: rgba(0, 0, 0, 0.8);
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            padding: 50px;
            border-radius: 15px;
            color: white;
            text-align: right;
        }

        img {
            width: 60px;
            height: 50px;
        }

        button {
            background-color: #2a9c6f;
            border: none;
            padding: 15px;
            width: 100%;
            border-radius: 15px;
            color: white;
            font-size: 15px;
            cursor: pointer;
        }

            button:hover {
                background-color: #12d98a;
            }
    </style>
</head>

<body>
    <div class="principal">
        <div class="consultas">
            <a href="~/Home/Agendamentos"><button><img src="/Imagens/consultas.png" alt="Consultas" /></button></a>
        </div>
        <div>
            <label style="margin-right:9px">Consultas</label>
        </div>
    </div>
</body>